<%= render './layouts/nav.html.erb' %>
<h1>All Rooms</h1>
<table>
  <tr>
    <th>Building Name</th>
    <th>Room ID</th>
    <th>Room Type</th>
    <th>Operate Start</th>
    <th>Operate End</th>
    <th>Technology</th>
    <th>Arrangment</th>
    <th>Number of People</th>
    
  </tr>

  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.building_name %></td>
      <td><%= room.room_id %></td>
      <td><%= room.roomtype %></td>
      <td><%= room.operate_start.strftime("%k:%M") %></td>
      <td><%= room.operate_end.strftime("%k:%M") %></td>
      <td><%= room.tech %></td>
      <td><%= room.arrangement%> </td>
      <td><%= room.numpeople%> </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', :back, :class => "btn" %>


